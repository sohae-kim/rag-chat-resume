{
    "version": 2,
    "buildCommand": "python scripts/build.py",
    "functions": {
        "api/index.py": {
            "runtime": "@vercel/python@3.10.0",
            "includeFiles": "data/**",
            "memory": 1024
        }
    },
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/index.py"
        },
        {
            "src": "/data/(.*)",
            "dest": "/data/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ],
    "env": {
        "PYTHONPATH": "."
    }
}